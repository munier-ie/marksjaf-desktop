{
  "name": "marksjaf-kitchen-pos",
  "productName": "MARKSJAF Kitchen POS",
  "description": "Professional Point of Sale System for MARKSJAF Kitchen - Premium Nigerian Cuisine",
  "private": true,
  "version": "1.0.0",
  "author": "MARKSJAF Kitchen",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron": "vite build -c vite.electron.config.ts",
    "build:all": "npm run build && npm run build:electron",
    "pack": "npm run build:all && electron-builder --dir",
    "dist": "npm run build:all && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\""
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.522.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest": "^30.0.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "supertest": "^7.1.1",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.marksjaf.desktop",
    "productName": "MARKSJAF POS",
    "icon": "public/marksjaf-logo.png",
    "forceCodeSigning": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-web/**/*",
      "dist-electron/**/*",
      "public/marksjaf-logo.png"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/**/*",
          "!node_modules"
        ]
      },
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*",
          "!.cache/**/*"
        ]
      },
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "public/marksjaf-logo.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],

      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/marksjaf-logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
